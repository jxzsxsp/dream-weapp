<block wx:if="{{statusId==110 || statusId==120}}">
<view class="status-info failed">
  <view class="status-container">
    <text class="status">{{statusName}}</text>
    <text class="price">{{price.priceNameDescription}}{{price.priceDescription}}</text>
  </view>
</view>
</block>
<block wx:else>
<view class="status-info">
  <view class="status-container">
    <view class="icon-container">
    <block wx:if="{{statusId==10 || statusId==30 || statusId==60 || statusId==70}}">
      <view class="iconfont icon-ic_history" style="font-size:48rpx;"></view>
    </block>
    <block wx:else>
      <view class="iconfont icon-ic_choose" style="font-size:48rpx;"></view>
    </block>
    </view>
    <text class="status">{{statusName}}</text>
    <text class="price">{{price.priceNameDescription}}{{price.priceDescription}}</text>
  </view>
</view>
</block>

<view class="item-info">
  <view class="item-cell">
    下单数量
    <view wx:if="{{fabricType==20}}" class="fabric-tag blue">{{fabricTypeName}}</view>
    <view wx:if="{{fabricType==10}}" class="fabric-tag red">{{fabricTypeName}}</view>
    <view class="cell-value">{{customerMetersAndWeight}}</view>
  </view>
  <view class="item-cell">
    实测数量
    <view class="cell-value value-active">{{bossMetersAndWeight}}</view>
  </view>
  <view class="item-cell">
    高级检测
    <view class="cell-value value-active">{{clothTypeName}}</view>
  </view>
  <view class="item-cell">
    服务项目
    <view class="cell-value value-desc">{{clothTypeItem}}</view>
  </view>
</view>

<view class="address-info">
  <view class="title">
    <van-icon class="location-icon" name="location" size="28rpx" />
    <text class="title-text name">{{receivingAddress.contacts}}</text>
    <text class="title-text mobile">{{receivingAddress.contactMobile}}</text>
  </view>
  <view class="address">{{receivingAddress.detailAddress}}</view>
</view>

<view class="price-info">

  <!-- <view class="item-cell">
    验布服务
    <view class="cell-value value-active">¥ 111.00</view>
  </view>
  <view class="item-cell">
    邮费价格
    <view class="cell-value value-active">¥ 0.00</view>
