<import src="../common/templeates.wxml"></import>
<view class="homecont" style="z-index:998;">
    <view style='height:60rpx;background-color: #e54e6f;z-index:1000;'>
        <scroll-view scroll-x style="width: 100%;height:60rpx;white-space: nowrap; display: flex;background:#e54e6f;position:fixed;top:0;z-index:1000;align-items:flex-start;">
            <view class="catetitle" bindtap='changeCate' data-cateName='本期特卖'>
                <view class="{{selectedCate=='本期特卖'?'active':''}}">本期特卖</view>
            </view>
            <view bindtap="changeCate" data-cateName='{{item}}' class="catetitle" wx:key="{{item}}" wx:for='{{barndRushCate}}'>
                <view class="{{selectedCate==item?'active':''}}">{{item}}</view>
            </view>


        </scroll-view>

    </view>
    <template is="{{'temp_'+item.type}}" data="{{...item,RequestUrl:RequestUrl}}" wx:key="{{item}}" wx:for="{{TopicData}}" wx:key="id" style="z-index:999;">
    </template>
    <view style='padding:0 0 27rpx 0'>
        <view wx:key="{{item}}" wx:for='{{brandRush}}' style='margin-bottom:10rpx;background:#fff;padding-right:27rpx'>
            <view style='padding:27rpx 26rpx 16rpx 16rpx;float:left;width:85rpx;height:90rpx;'>
                <view style='border: 1rpx solid #e5e5e5;width:85rpx;height:85rpx'>
                    <image src='{{item.brandLogo}}' style='width:98%' mode='widthFix'></image>
                </view>
                <view style='width:98%;font-size:12px;text-align:center;padding-top:10rpx;font-size:26rpx;color:#e54e6f;'>{{item.goodsCount? item.goodsCount : 82}}
                    <text style="font-size:22rpx;color:#959595;">款</text>
                </view>
            </view>
            <view style='float:right:623rpx'>
                <view style='height:85rpx;padding:27rpx 0 16rpx 0'>
                    <view style='font-size:30rpx;'>{{item.mainTitle}}</view>
                    <view>
                        <view>
                            <view wx:if="{{item.subTitle != null}}" style='cursor:pointer;font-size:20rpx;line-height:34rpx;color:#ff0000;background-color:#ffe0e7;border-radius: 15px;height:34rpx;margin-top:9rpx;height:35rpx;padding: 0 8rpx;margin-right:10rpx;float:left'>{{item.subTitle}}</view>

                            <view wx:if="{{item.subTitleArray != null}}" style='cursor:pointer;font-size:20rpx;line-height:34rpx;color:#ff0000;background-color:#ffe0e7;border-radius: 15px;height:34rpx;margin-top:9rpx;height:35rpx;padding: 0 8rpx;margin-right:10rpx;float:left' wx:for='{{item.subTitleArray}}'>{{item}}</view>

                            <view style='float:right;font-size:26rpx;padding-right:15rpx' wx:if= "{{userInfo.IsReferral}}">最高分佣
                                <text style='cursor:pointer;padding-left:5rpx;color:#ff0000;'>{{item.topCommissionRate}}%</text>
                            </view>
                        </view>
                    </view>
                </view>
                <view style='clear:both'></view>

                <view style='padding-left:129rpx'>
                    <view style='font-size:28rpx;color:#515151;padding-bottom:16rpx'>
                        <text bindlongpress='copy' class='ellipsis' data-val="{{item.brandDesc}}">{{item.brandDesc}}</text>
                    </view>
                </view>
                <view style='padding-left:129rpx'>
                    <view wx:key="{{item}}" wx:for='{{item.goodsImages}}' wx:for-item='goodsImg' style='float:left;padding-right:10rpx'>
                        <image src='{{goodsImg}}' style='width:186rpx;height:186rpx;' bindtap='previewImg' data-imgsrc='{{goodsImg}}' data-imgs='{{item.goodsImages}}'></image>
                    </view>
                    <view style='clear:both'></view>
                </view>
                <view style='padding-left:129rpx;padding-right:20rpx'>
                    <!-- <view style='font-size: 26rpx;	color: #b0b0b0;	line-height: 40rpx;'> -->
                    <view style='font-size: 26rpx;	color: #b0b0b0;	line-height: 40rpx;'>
                        <text>距活动结束</text>
                        <text style='float:right;'>结束时间</text>
                    </view>
                    <view>
                        <!-- <view style='float:left' class='tui-countdown-content'>
                            <text class='tui-conutdown-box'>{{item.countDownTime.day}}</text>天
                            <text class='tui-conutdown-box'>{{item.countDownTime.hou}}</text>时
                            <text class='tui-conutdown-box'>{{item.countDownTime.min}}</text>分
                            <text class='tui-conutdown-box tui-countdown-bg'>{{item.countDownTime.sec}}</text>秒
                        </view> -->

                        <view style='float:left' class='tui-countdown-content'>
                            <text class='tui-conutdown-box'>{{item.countDownTime.day}}</text>天
                            <text class='tui-conutdown-box'>{{item.countDownTime.hou}}</text>时
                        </view>
                        <view style='float:right;height:25rpx;font-size:22rpx;color:#515151'>
                            {{item.endTimeInfo}}
                        </view>
                        <view style='clear:both'></view>
                    </view>
                </view>
                <view style='padding-left:115rpx'>
                    <!-- 添加分享整场链接 -->
                    <view style='float:right;width:160rpx;height:50rpx;background-color:#e54e6f;margin:10rpx 20rpx 30rpx 0;font-size:26rpx;text-align:center;line-height:50rpx'>
                        <button style='width:160rpx;font-size:26rpx;line-height:50rpx;border:none;color:#fff;' data-brandId='{{item.brandId}}' data-brandsource='{{item.brandSource}}' data-maintitle='{{item.mainTitle}}' plain='true'   bindtap='sharemsg' >分享专场</button><!--openType="share" -->

                        <view style='clear:both'></view>
                    </view>

                    <view style='float:right;width:160rpx;height:50rpx;background-color:#e54e6f;margin:10rpx 20rpx 30rpx 0;font-size:26rpx;color:#fefefe;text-align:center;line-height:50rpx' bindtap='linkToBrandRush' data-brandId='{{item.brandId}}' data-brandsource='{{item.brandSource}}'>去选品</view>
                    <view style='clear:both'></view>
                </view>
            </view>
        </view>
    </view>

    <view class='loadmore loading' wx:if="{{ hasMore }}">正在加载中…</view>
    <view class='loadmore' wx:else>已经到底了~</view>

    <view class="deg">
        <button bindtap='shoppingcart' >购物车</button><!-- openType="contact" -->
    </view>
</view>