.back-content {
  width: 750rpx;
  height: 365rpx;
  justify-content: center;
  align-items: center;
}

.back-content image{
  width: 100%;
}

.main-content {
  margin-top: -145rpx;
  width: 750rpx;
  align-items: center;
}

.order-content {
  width: 690rpx;
  height: 160rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 18px 0 rgba(0,0,0,0.20);
  border-radius: 10px;
  justify-content: center;
  align-items: center;
}

.item-content {
  width: 690rpx;
  margin-top: 30rpx;
}

.item-container {
  width: 630rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 18px 0 rgba(0,0,0,0.20);
  border-radius: 10px;
  margin-bottom: 20rpx;
  padding: 25rpx 30rpx 25rpx 30rpx;
}

.content {
  width: 430rpx;
}

.title {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #252525;
  letter-spacing: 0;
}

.desc {
  margin-top: 25rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #252525;
  letter-spacing: 0;
  line-height: 40rpx;
}

.price {
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #252525;
  letter-spacing: 0;
}

.button {
  margin-top: 20rpx;
  width: 140rpx;
  height: 42rpx;
  background-image: linear-gradient(-270deg, #DF515E 0%, #BB2830 100%);
  border-radius: 21rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
  justify-content: center;
  align-items: center;
}

.image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 30rpx;
}

.image image {
  width: 100%;
  height: 100%;
}

.memo {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}