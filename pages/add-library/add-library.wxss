.name-container {
  height: 138rpx;
  padding: 16rpx 32rpx 0rpx 32rpx;
  border-bottom: 1rpx solid #D8D8D8;
}

.title {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #616161;
  letter-spacing: 0.93rpx;
}

.name {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  height: 56rpx;
}

.num-limit {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #CBCBCB;
  letter-spacing: 0.93rpx;
  float: right;
}

.content-container {
  height: 600rpx;
  padding: 16rpx 32rpx 0rpx 32rpx;
}

.content {
  height: 550rpx;
  margin-top: 10rpx;
}

.content textarea {
  width: 100%;
  height: 100%;
}

.bottom-btn {
  width: 750rpx;
  height: 174rpx;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn {
  width: 670rpx;
  height: 94rpx;
  background: #F0F0F5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #CBCBCB;
  letter-spacing: 1.35rpx;
  text-align: center;
}

.btn-active {
  background: #0156FE;
  color: #FFFFFF;
}