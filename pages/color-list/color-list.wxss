.search-bar-container {
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.search-bar {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.20);
}

.search-button {
  margin-left: 10rpx;
  width: 80rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-button-text {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  text-align: right;
  line-height: 36rpx;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 26rpx;
  color: #252525;
}

.search-input {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #4A4A4A;
  letter-spacing: 0;
  line-height: 36rpx;
  flex: 1;
}

.search-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 36rpx;
}

.color-total-container {
  margin-top: 90rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.color-container {
  width: 25%;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  box-sizing: border-box;
}

.color-color {
  height: 0rpx;
  padding-bottom: 100%;
}

.color-title {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
}