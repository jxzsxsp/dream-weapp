.content {
  background: #FFFFFF;
  padding: 30rpx 30rpx 30rpx;
}

.check-item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item {
  border: 1rpx solid gray;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 20rpx;
}

.customer-info {
  height: 68rpx;
  line-height: 68rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  align-items: center;
}

.right-text {
  float: right;
  display: flex;
  flex-direction: row;
}

.right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.operate-btn {
  position: fixed;
  z-index: 50;
  left: 0rpx;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.operate-btn text {
  font-family: PingFangSC-Regular;
  font-size: 38rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}

.reject-btn {
  height: 88rpx;
  width: 375rpx;
  background: #FF0000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.inbound-btn {
  height: 88rpx;
  width: 375rpx;
  background: #00B1EF;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.long-btn {
  width: 750rpx;
}

.bottom-line {
  height: 30rpx;
}

.price {
  display: flex;
  flex-direction: row;
}

.price text {
  margin-left: 30rpx;
  width: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}