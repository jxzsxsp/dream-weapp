.content {
  background: #FFFFFF;
  padding: 30rpx 30rpx 30rpx;
}

.customer-info {
  height: 68rpx;
  line-height: 68rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  align-items: center;
}

.right-text {
  float: right;
  display: flex;
  flex-direction: row;
}

.operate-btn {
  position: fixed;
  z-index: 100;
  left: 0rpx;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.operate-btn text {
  font-family: PingFangSC-Regular;
  font-size: 38rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}

.reject-btn {
  height: 88rpx;
  width: 375rpx;
  background: #FF0000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.inbound-btn {
  height: 88rpx;
  width: 375rpx;
  background: #00B1EF;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.bottom-line {
  height: 30rpx;
}
