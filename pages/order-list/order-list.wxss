.content {
  width:100%;
  overflow-x:hidden;
  background: #F1F1F1;
}

.pay-container {
  width: 750rpx;
  background: #FFFFFF;
}

.close {
  width: 40rpx;
  height: 40rpx;
  margin-top: 35rpx;
  margin-left: 35rpx;
  color: #252525;
  font-size: 40rpx;
}

.title {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #252525;
  letter-spacing: 0;
  text-align: center;
  width: 136rpx;
  margin-top: -25rpx;
  margin-left: 307rpx;
}

.price {
  width: 750rpx;
  height: 100rpx;
  margin-top: 90rpx;
  margin-bottom: 90rpx;
  font-family: PingFangSC-Semibold;
  font-size: 48rpx;
  color: #BB2830;
  letter-spacing: 0;
  text-align: center;
}

.item-cell {
  height: 40rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #252525;
  letter-spacing: 0;
  margin-top: 10rpx;
}

.cell-value {
  float: right;
  color: #BB2830;
}

.line {
  width: 690rpx;
  height: 1rpx;
  margin-left: 30rpx;
  background: #F1F1F1;
  margin-top: 30rpx;
}

.pay-btn {
  width: 570rpx;
  height: 88rpx;
  margin-top: 194rpx;
  margin-left: 90rpx;
  background-image: linear-gradient(-270deg, #DF515E 0%, #BB2830 100%);
  box-shadow: 0 2rpx 18rpx 0 rgba(187,40,48,0.20);
  border-radius: 44rpx;
  margin-bottom: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  justify-content: center;
  align-items: center;
}