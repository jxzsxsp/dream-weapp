<view class="container">
  <view class="result-container">
    <text class="result-title">△ = ?</text>
    <text class="result-subtitle">值越小代表颜色越接近</text>
  </view>

  <view class="color-container">
    <view class="remote-color-container">
      <view class="remote-color" style="background: {{remoteColorDetail.hexColor}}"/>
      <view class="remote-text-container">
        <text class="remote-text">样本选择</text>
      </view>
    </view>
    <view class="locol-color-container">
      <view class="locol-color"/>
      <button class="locol-text-container" open-type="launchApp" app-parameter="{{id}}" bind:error="launchAppError">
        <text class="locol-text">去 app</text>
      </button>
    </view>
  </view>

  <view class="detail-container">
    <view class="remote-detail">
      <text class="remote-hexcolor">{{remoteColorDetail.hexColor}}</text>
      <text class="remote-detail-color">sRGB: {{remoteColorDetail.rgb}}</text>
      <text class="remote-detail-color">LAB: {{remoteColorDetail.lab}}</text>
    </view>
  </view>

  <suspend-button>
    <view class="go-home-container">
      <view class="iconfont icon-tab_index_a go-home-view"/>
      <text class="go-home-text">回首页</text>
    </view>
  </suspend-button>
</view>