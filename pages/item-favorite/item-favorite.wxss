.bottom-line {
  width: 518rpx;
  height: 1px;
  margin-left: 232rpx;
  background: #EFEFEF;
}

.item {
  width: 100%;
  height: 240rpx;
  background: #ffffff;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  background: #F8F8F8;
  border-radius: 12px;
  overflow: hidden;
  margin-left: 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.content {
  margin-left: 20rpx;
  justify-content: center;
}

.title {
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #000000;
  letter-spacing: 0;
}

.product-name {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #888888;
  letter-spacing: 0.39rpx;
}

.price-container {
  margin-top: 43rpx;
  align-items: flex-end;
}

.price {
  font-family: PTMono-Bold;
  font-size: 36rpx;
  color: #4A90E2;
  letter-spacing: 0.54rpx;
}

.small-word {
  font-size: 20rpx;
}

.unit {
  font-family: PTMono-Regular;
  font-size: 18rpx;
  color: #8E8E93;
  letter-spacing: 0.27rpx;
  margin-left: 10rpx;
}

.no-item-img {
  width: 120rpx;
  height: 120rpx;
  margin: auto;
  margin-top: 390rpx;
}

.no-item-img image {
  width: 100%;
  height: 100%;
}

.no-item-txt {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #C9C8D0;
  letter-spacing: 1rpx;
  text-align: center;
  margin: auto;
  margin-top: 5rpx;
}

.van-swipe-cell__right {
  display: inline-block;
  width: 100px;
  height: 120px;
  font-size: 20px;
  line-height: 120px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}