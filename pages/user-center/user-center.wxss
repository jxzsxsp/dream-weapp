.save-img {
  margin-top: 20rpx;
  width: 300rpx;
  height: 88rpx;
  background: #0eb06c;
  border-radius: 14rpx;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  text-align: center;
}

.canvas-img {
  width: 750rpx;
  height: 970rpx;
  align-items: center;
}

.share-qrcode-img {
  width: 600rpx;
  height: 780rpx;
  margin-top: 30rpx;
}

.share-qrcode-img image {
  width: 100%;
  height: 100%;
}

.share-qrcode-text {
  margin-top: 18rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #616161;
  letter-spacing: 0.8rpx;
}

.guanbi-event {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
  justify-content: center;
  align-items: center;
}

.guanbi {
  font-size: 38rpx;
}

.hidden-canvas {
  width:0rpx;
  height:0rpx;
  overflow:hidden;
  position: absolute;
  top: 0;
  right: 0;
}