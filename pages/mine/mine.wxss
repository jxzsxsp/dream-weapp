.login-container {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.not-login-container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.not-login-text {
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #252525;
  letter-spacing: 0;
  text-align: center;
}

.not-login-button {
  background-image: linear-gradient(-270deg, #DF515E 0%, #BB2830 100%);
  box-shadow: 0 2px 18px 0 rgba(187, 40, 48, 0.20);
  border-radius: 32px;
  margin-top: 28rpx;
  height: 64rpx;
  width: 253rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.not-login-button-text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.edit-user {
  display: flex;
  flex-direction: row;
}

.edit-text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  margin-right: 10rpx;
}

.has-login-container {
  height: 300rpx;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}

.avatar {
  height: 140rpx;
  width: 140rpx;
  border-radius: 70rpx;
  margin-left: 40rpx;
}

.user-name-container {
  flex: 1;
  margin-left: 40rpx;
}

.user-name {
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #252525;
  letter-spacing: 0;
}

.setting-row-container {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
}

.setting-icon {
  height: 28rpx;
  width: 28rpx;
  margin-left: 66rpx;
  font-size: 40rpx;
}

.setting-text {
  margin-left: 32rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #252525;
  letter-spacing: 0;
  flex: 1;
}

.setting-detail {
  transform: rotate(180deg);
  margin-right: 20rpx;
  color: #979797;
}

.tel-container {
  flex: 1;
}

.sub-text {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  margin-left: 32rpx;
}

.tel-text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #252525;
  letter-spacing: 0;
  margin-right: 40rpx;
}

.vip-container {
  margin-top: 10rpx;
  align-items: center; 
}

.vip-image {
  width: 40rpx;
  height: 40rpx;
}

.vip-text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #252525;
  letter-spacing: 0;
  text-align: center;
}