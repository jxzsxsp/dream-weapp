    color: #fff;
    margin-left:25rpx;
}
.catetitle view.active {    
    font-size: 24rpx;
    line-height: 40rpx;
    background: #fff;
    color: #f96f24;
    border-radius: 15rpx
}

.mt80 {
    margin-top: 80rpx;
    position: relative;
}

.tui-countdown-content {
    height: 24rpx;
    line-height: 24rpx;
    text-align: center;
    margin-top: 55rpx;
    padding: 0 15rpx;
    font-size: 24rpx;
}

.tui-conutdown-box {
    display: inline-block;
    height: 24rpx;
    width: 30rpx;
    line-height: 24rpx;
    text-align: center;
    background-color: #000;
    color: #fff;
    margin: 0 5rpx;
    padding: 5rpx;
}

.tui-countdown-bg {
    background-color: #df0101;
}

.brandLogo {
    height: 100rpx;
    width: 100rpx;
    border: 1rpx solid #e5e5e5
}

.deg {
    position: fixed;
    bottom: 24rpx;
    right: 24rpx;
    width: 96rpx;
    height: 96rpx;
    background: #e54e6f;
    border-radius: 100%;
}

.deg button {
    border: none;
    background: none;
    border-radius: 0;
    color: #fff;
    font-size: 20rpx;
    line-height: 48rpx;
    padding: 24rpx 0;
    text-align: center;
}

.deg button:after {
    border: none;
}




