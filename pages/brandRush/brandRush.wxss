.brand-item-box {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    padding: 0 30rpx;
}

.brand-img-box {
    padding: 20rpx 20rpx 20rpx 0;
    height: 100rpx;
    width: 100rpx;
}

.brand-desc {
    width: 570rpx;
    text-align: left;
}

.brand-item-price-line {
    display: flex;
    flex-direction: row nowrap;
    justify-content: space-between;
}

.container-box {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    color: #939393;
}

.nav_left {
    display: inline-block;
    width: 25%;
    height: 100%;
    min-height: 100%;
    background-color: #f5f5f5;
    text-align: center;
}

.nav_left .nav_left_items {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 13px;
    box-sizing: margin-box;
    display: flex;
    align-items: center;
}

.nav_left .nav_left_items .brcontainer {
    font-size: 14px;
    font-weight: 400;
    width: 100%;
    border-left: 5rpx solid transparent;
    height: 50rpx;
    line-height: 50rpx;
}

.nav_left .nav_left_items.active .brcontainer {
    font-size: 15px;
    font-weight: 700;
    background: #fff;
    color: #000;
    width: 100%;
    border-left: 5rpx solid red;
}

.nav_left .nav_left_items.active {
    background: #fff;
}

.nav_right {
    position: absolute;
    top: 0;
    right: 0;
    flex: 1;
    width: 75%;
    height: 100%;
    padding: 10px;
    box-sizing: border-box;
    background: #fff;
}
.emptyShow{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.emptyShow image{
  width: 100rpx;
  height: 100rpx;
}
.emptyShow text{
  text-align: center
}