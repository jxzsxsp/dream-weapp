.page-section {
    background: #fff;
}

.tagtitle {
    height: 80rpx;
    text-align: center;
    display: inline-block;
    font-size: 26rpx;
    line-height: 76rpx;
    color: #fff;
    margin-left: 25rpx;
    box-sizing: border-box;
    padding: 0rpx 10rpx;
}

.tagtitle view.active {
    font-size: 26rpx;
    color: red;
    border-bottom: 4rpx solid red;
    box-sizing: border-box;
    height: 76rpx;
    line-height: 76rpx;
}

.catetitle {
    /* width: 114rpx; */
    height: 49rpx;
    text-align: center;
    display: inline-block;
    font-size: 26rpx;
    line-height: 26rpx;
    color: #fff;
    margin-left: 25rpx;
}

.catetitle view.active {
    font-size: 26rpx;
    line-height: 40rpx;
    background: #fff;
    color: #db3c40;
    border-radius: 20rpx;
    padding: 4rpx 18rpx;
}

.mt80 {
    margin-top: 80rpx;
    position: relative;
}

.tui-countdown-content {
    height: 24rpx;
    line-height: 24rpx;
    text-align: center;
    margin-top: 55rpx;
    padding: 0 15rpx;
    font-size: 24rpx;
}

.tui-conutdown-box {
    display: inline-block;
    height: 24rpx;
    width: 30rpx;
    line-height: 24rpx;
    text-align: center;
    background-color: #515151;
    color: #fff;
    margin: 0 5rpx;
    padding: 5rpx;
}

.tui-countdown-bg {
    background-color: #df0101;
}

.brandLogo {
    height: 100rpx;
    width: 100rpx;
    border: 1rpx solid #e5e5e5;
}

.deg {
    position: fixed;
    bottom: 24rpx;
    right: 24rpx;
    width: 96rpx;
    height: 96rpx;
    background: #db3c40;
    border-radius: 100%;
}

.deg button {
    border: none;
    background: none;
    border-radius: 0;
    color: #fff;
    font-size: 20rpx;
    line-height: 48rpx;
    padding: 24rpx 0;
    text-align: center;
}

.deg button:after {
    border: none;
}

