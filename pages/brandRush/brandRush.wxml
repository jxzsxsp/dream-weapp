<view class="page-section">
    <view style='height:70rpx;z-index:1000;background-color: #fff;'>
        <scroll-view scroll-x style="width: 100%;height:70rpx;white-space: nowrap; display: flex;background:#db3c40;position:fixed;top:0;z-index:1000;align-items:flex-start;">
            <view class="catetitle" bindtap='changeCate' data-cateName='本期特卖'>
                <view class="{{selectedCate=='本期特卖'?'active':''}}">本期特卖</view>
            </view>
            <view bindtap="changeCate" data-cateName='{{item}}' class="catetitle" wx:key="{{item}}" wx:for='{{barndRushCate}}'>
                <view class="{{selectedCate==item?'active':''}}">{{item}}</view>
            </view>
        </scroll-view>
    </view>




    <!-- 品牌列表页分类筛选 -->
    <!-- <view style='height:80rpx;line-height:80rpx;background-color: #fff;z-index:1000;'>
        <scroll-view scroll-x style="width: 100%;height:80rpx;line-height:80rpx;white-space: nowrap; display: flex;background:#f7f7f7;position:fixed;flex-flow:row nowrap;top:60rpx;z-index:1000;align-items:flex-start;justify-content:flex-start;">

            <view class="tagtitle" bindtap='changeTag' data-tagName='所有品牌'>
                <view style='color:#000;' class="{{selectedTag=='所有品牌'?'active':''}}">所有品牌</view>
            </view>
            <view bindtap="changeTag" data-tagName='{{item}}' class="tagtitle" wx:key="{{item}}" wx:for='{{tagList}}'>
                <view style='color:#000;' class="{{selectedTag==item?'active':''}}">{{item}}</view>
            </view>
        </scroll-view>
    </view> -->

    <view>
        <view wx:for='{{brandRush}}' class='brand-item-box' style='height:140rpx;border-bottom:1px solid #e5e5e5;background:#fff' bindtap='linkToBrandRush' data-brandId='{{item.brandId}}' data-brandsource='{{item.brandSource}}'>
            <view class='brand-img-box'>
                <image src='{{item.brandLogo}}' class='brandLogo'></image>
            </view>
            <view class='brand-desc'>
                <view class='item-right-box'>
                    <view style='padding-top:20rpx;margin-bottom:10rpx;font-size:26rpx;color:#000;' class='overflowOne'>
                        {{item.mainTitle}}
                    </view>
                    <view class='brand-item-price-line' style='color:#515151;font-size:24rpx;padding-top:5rpx'>
                        <text style='font-size:32rpx;color:#ff0000'>￥{{item.lowerPrice}}起</text>
                        <text wx:if="{{userInfo.IsReferral}}" style='font-size:26rpx;color:#959595;padding:0 8rpx;background:#fff;border-radius: 30rpx;'>最高分佣{{item.topCommissionRate}}%</text>
                         <!-- <text wx:if="{{userInfo.IsReferral}}" style='font-size:26rpx;color:#ff0000;padding:0 8rpx;background:#f7cfd1;border-radius: 30rpx;'>最高分佣{{item.topCommissionRate}}%</text> -->
                    </view>
                </view>
            </view>

        </view>
    </view>

    <view class='loadmore loading' wx:if="{{hasMore}}">正在加载中…</view>
    <view class='loadmore' wx:else>—— 我也是有底线的 ——</view>
</view>
