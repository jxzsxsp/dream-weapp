<cloth-block>

  <van-cell-group>

    <van-cell 
    title="验布单号"
    value="{{orderDetail.orderNo}}"
    border="{{ false }}"
    />

    <van-cell 
    title="客户名称"
    value="{{orderDetail.customerName}}"
    border="{{ false }}"
    />

    <van-cell 
    title="联系方式"
    value="{{orderDetail.customerMobile}}"
    border="{{ false }}"
    />

  </van-cell-group>

</cloth-block>

<cloth-block title="收款明细">
  <view class="content">
    <view class="content-head">
      <text>唯一码</text>
      <text class="center-head">数量(米/公斤)</text>
      <text class="right-head">价格(元)</text>
    </view>
    <view wx:for="{{orderRoll}}" wx:key="index" class="content-text">
      <text>{{ item.rollCode }}</text>
      <text class="center-text">{{ item.metersAndWeight || '' }}</text>
      <text class="right-text">{{item.price}}</text>
    </view>
  </view>
</cloth-block>

<cloth-block title="收款信息">

  <van-cell-group>

    <van-cell 
    title="面料类型"
    value="{{orderDetail.bossFabricTypeName}}"
    border="{{ false }}"
    />

    <van-cell 
    title="验布方式"
    value="{{orderDetail.bossClothTypeName}}"
    border="{{ false }}"
    />

    <van-cell 
    title="检测项目"
    title-width="180rpx"
    border="{{ false }}"
    >
      <view class="check-item">
        <block wx:for="{{orderDetail.bossClothTypeItemString}}" wx:key="index">
          <view class="item">{{item}}</view>
        </block>
      </view>
    </van-cell>

    <van-cell 
    title="取货方式"
    value="{{orderDetail.bossPickUpTypeName}}"
    border="{{ false }}"
    />

    <van-cell 
    title="实际总卷数"
    value="{{ orderDetail.bossFabricVolumes}} 卷"
    border="{{ false }}"
    />

    <van-cell 
    title="已入库卷数"
    value="{{ orderDetail.bossFabricVolumesReadyIn}} 卷"
    border="{{ false }}"
    />

    <van-cell 
    title="已验布卷数"
    value="{{ orderDetail.bossFabricVolumesReadyComplete}} 卷"
    border="{{ false }}"
    />

    <van-cell 
    title="总金额"
    value="{{ orderDetail.price}}元"
    border="{{ false }}"
    />

    <van-cell 
    title="客户折扣"
    value="{{customerDetail.discountName}}"
    border="{{ false }}"
    />

    <van-cell 
    title="应收金额"
    value="{{orderDetail.proposedPrice}}元"
    border="{{ false }}"
    />

    <van-cell 
    title="实收金额"
    border="{{ false }}"
    >
      <view class="right-text">
        <input type="digit" class="amount-text" value="{{fee}}" bind:change="changeFee"></input>
        <text>元</text>
      </view>
    </van-cell>

    <van-field
      value="{{ memo }}"
      label="收款备注"
      placeholder="请填写收款备注"
      type="textarea"
      autosize
      bind:change="changeMemo"
    />

  </van-cell-group>

  <view class="bottom-line"></view>
</cloth-block>

<view class="collection-btn" bind:tap="submit">
  <text>收款</text>
</view>

<van-dialog id="van-dialog" />