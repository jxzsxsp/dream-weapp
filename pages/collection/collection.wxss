.content {
  background: #FFFFFF;
  padding: 30rpx 30rpx 30rpx;
}

.content-text {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 68rpx;
  line-height: 68rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  align-items: center;
}

.right-text {
  float: right;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.amount-text {
  background: #FFFFFF;
  border: 2rpx solid #E2E2E2;
  border-radius: 6rpx;
  width: 200rpx;
  height: 48rpx;
}

.content-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #999999;
  letter-spacing: -0.63rpx;
  line-height: 40rpx;
}

.collection-btn {
  position: fixed;
  z-index: 100;
  left: 0rpx;
  bottom: 0rpx;
  background: #00B1EF;
  width: 750rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.collection-btn text {
  font-family: PingFangSC-Regular;
  font-size: 38rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}

.bottom-line {
  height: 130rpx;
}

.check-item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.item {
  border: 1rpx solid gray;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 20rpx;
}