.container {
  padding-left: 32rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.add {
  border-top: 1rpx solid #D8D8D8;
  border-bottom: 1rpx solid #D8D8D8;
}

.add text {
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #4B4B4B;
  letter-spacing: 1.33rpx;
  margin-left: 25rpx;
}

.chuangjian {
  color: #0156FE;
  font-size: 70rpx;
}

.default {
  border-bottom: 1rpx solid #D8D8D8;
}

.color-icon {
  width: 80rpx;
  height: 80rpx;
  background: #D8D8D8;
  border-radius: 10rpx;
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  letter-spacing: 0.8rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.color-content {
  height: 120rpx;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 535rpx;
}

.color-title {
  font-family: PingFangSC-Medium;
  font-size: 31rpx;
  color: #000000;
  letter-spacing: 1.03rpx;
}

.color-desc {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #A5A5A5;
  letter-spacing: 0.8rpx;
}

.point {
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 4rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background: #A5A5A5;
}

.more-icon {
  color: #CBCBCB;
  font-size: 48rpx;
  animation-duration: 1s;
  animation-fill-mode: forwards; 
}




.action-container {
  border-radius: 34rpx 34rpx 0 0;
  background: #FFFFFF;
  padding: 34rpx 34rpx 40rpx 34rpx; 
}

.van-popup--bottom {
  background: transparent!important;
}

.van-popup--safe {
  padding-bottom: 0rpx!important;
}

.action-title {
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #616161;
  letter-spacing: 0.46rpx;
}

.action-row-container {
  height: 120rpx;
}

.action-icon {
  color: #0156FE;
  font-size: 24px;
}

.action-row-title {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: -0.22rpx;
  margin-left: 42rpx;
}

.action-cancel {
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  background: #EFEFF4;
  border-radius: 16px;
  align-items: center;
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #4B4B4B;
  letter-spacing: -0.22px;
  margin-top: 40rpx;
}

.confirm-container {
  height: 580rpx;
  padding: 0 16rpx 21rpx 16rpx;
}

.confirm-delete-container {
  border-radius: 28rpx;
  height: 434rpx;
  overflow: hidden;
}

.confirm-color-container {
  border-bottom: 1rpx solid rgba(0,0,80,0.05);
  flex: 1;
  background: #FFFFFF;
}

.confirm-button {
  height: 112rpx;
  line-height: 112rpx;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #FF001F;
  letter-spacing: 0.76rpx;
  text-align: center;
  width: 100%;
  border-radius: 0rpx;
  background: #FFFFFF;
}

.confirm-cancel {
  height: 112rpx;
  line-height: 112rpx;
  width: 100%;
  margin-top: 16rpx;
  background: #FFFFFF;
  border-radius: 34rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #0156FE;
  letter-spacing: 1.5rpx;
  text-align: center;
}

.confirm-title {
  margin-top: 30rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 0.93rpx;
  text-align: center;
}

.confirm-subtitle {
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #8F8F8F;
  letter-spacing: -0.16rpx;
  text-align: center;
  line-height: 36rpx;
  margin-top: 20rpx;
}

@keyframes left-to-right {
  to {transform: translateX(60rpx)}
}

@keyframes fade-in {
  to {opacity: 1;}
}

@keyframes fade-out {
  to {opacity: 0;}
}

@keyframes short-to-long {
  from {height: 88rpx; }
  to {height: 260rpx}
}

@keyframes long-to-short {
  from {height: 260rpx}
  to {height: 88rpx}
}

@keyframes scroll-short-to-long {
  from {height: 0rpx;}
  to {height: 172rpx;}
}

@keyframes scroll-long-to-short {
  from {height: 172rpx;}
  to {height: 0rpx;}
}