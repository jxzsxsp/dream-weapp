<view class='tab-container flex'>
  <view class='tabs flex'>
    <view class="tab flex {{currentTabType === yangkaType ? 'selected' : ''}}" data-type='{{yangkaType}}' bindtap='toggleTabType'>
      <text>拿样卡</text>
    </view>
    <view class="tab flex {{currentTabType === miyangType ? 'selected' : ''}}" data-type='{{miyangType}}' bindtap='toggleTabType'>
      <text>剪米样</text>
    </view>
  </view>
</view>

<view class='content'>
  <view wx:if="{{currentTabType === yangkaType}}">
    <fold
      title="待回复"
      show="{{allData[status.unreport].show}}"
      status="{{status.unreport}}"
      bind:show="showList"
    >
      <apply-item-list
        status="{{status.unreport}}"
        hasMore="{{allData[status.unreport].loadingState.hasMore}}"
        list="{{allData[status.unreport].list}}"
        bind:more="loadMore"
        bind:receive="confirmReceived"
        catch:shop="gotoShop"
        catch:item="gotoItem"
      />
    </fold>

    <fold
      title="已同意"
      show="{{allData[status.agree].show}}"
      status="{{status.agree}}"
      bind:show="showList"
