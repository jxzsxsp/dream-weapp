      />
    </fold>

    <fold
      title="已收货"
      show="{{allData[status.received].show}}"
      status="{{status.received}}"
      bind:show="showList"
    >
      <apply-item-list
        status="{{status.received}}"
        hasMore="{{allData[status.received].loadingState.hasMore}}"
        list="{{allData[status.received].list}}"
        bind:more="loadMore"
        bind:receive="confirmReceived"
        catch:shop="gotoShop"
        catch:item="gotoItem"
      />
    </fold>
  </view>

