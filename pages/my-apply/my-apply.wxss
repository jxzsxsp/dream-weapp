.tab-container {
  position: fixed;
  width: 100%;
  height: 76rpx;
  top: 0;
  left: 0;
  z-index: 100;
  background: #f9f9f9;
  justify-content: center;
}

.tabs {
  height: 56rpx;
  border: 1rpx solid #0055f8;
  border-radius: 10rpx;
  overflow: hidden;
}

.tab {
  width: 226rpx;
  height: 56rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #0055f8;
  background: #ffffff;
  justify-content: center;
  align-items: center;
}

.selected {
  color: #ffffff;
  background: #0055f8;
}

.content {
  margin-top: 76rpx;
  width: 100%;
}