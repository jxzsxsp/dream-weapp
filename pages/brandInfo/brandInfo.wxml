<wxs module="filter" src="../../utils/filter.wxs"></wxs>
<view class='page-section' style='width:750rpx;'>
    <view style='margin-top:10rpx;overflow:hidden;width:730rpx;margin-left:10rpx;;'>
        <view wx:for='{{brandRushInfo}}' style='padding-right:27rpx;background:#fff;overflow:hidden;'>
            <view style='overflow:hidden;'>
                <view style='padding:27rpx 26rpx 16rpx 16rpx;float:left;'>
                    <view style='width:85rpx;height:85rpx;border: 1rpx solid #e5e5e5;display:flex;justify-content:center;align-items:center;'>
                        <image src='{{item.brandLogo}}' style='width:98%' mode='widthFix'></image>
                    </view>
                </view>
                <view style='height:85rpx;padding:27rpx 0 16rpx 0'>
                    <view style='font-size:30rpx;'>{{item.mainTitle}}</view>
                    <view>
                        <view style='overflow:hidden;'>
                            <view wx:if='{{item.subTitle}}' style='font-size:20rpx;line-height:34rpx;color:#ff0000;background-color: #ffe0e7;	border-radius: 15px;height:34rpx;margin-top:9rpx;height:35rpx;padding: 0 8rpx;float:left;margin-right:10rpx;'>{{item.subTitle}}</view>

                            <view style='font-size:20rpx;line-height:34rpx;color:#ff0000;background-color: #ffe0e7;	border-radius: 15px;height:34rpx;margin-top:9rpx;height:35rpx;padding: 0 8rpx;float:left'>{{filter.toFix((item.lowerDiscount / 10),1)}}折起</view>

                            <view style='float:right;font-size:26rpx;padding-right:15rpx' wx:if="{{userInfo.IsReferral}}">最高分佣
                                <text style='padding-left:5rpx;color:#ff0000;'>{{item.topCommissionRate}}%</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view style='padding-left:129rpx'>
                <view style='font-size:26rpx;line-height:40rpx;color:#515151'>
                    <text bindlongpress='copy' class='ellipsis' data-val="{{item.brandDesc}}">{{item.brandDesc}}</text>
                </view>
            </view>
            <view style='padding-left:129rpx;padding-bottom:15rpx;display:flex;justify-content:flex-start;align-items:center;'>
                <view>
                    <image src='http://img.qkmai.com/qkmbb/icon_brand_notice.png' style='margin-right:30rpx;width:35rpx;height:30rpx;padding-top:10rpx;'></image>
                </view>
                <view style='overflow:hidden;'>
                    <view class='videoLed'>
                        <text style="font-size:22rpx;color:#db3c40;white-space:nowrap;">{{item.brandNotice}}商品在活动结束后按付款顺序发货，谢谢理解！</text>
                    </view>

                </view>
            </view>
