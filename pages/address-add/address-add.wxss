.normal-text {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
}

.input {
  text-align: right;
  flex: 1;
}

.placeholder {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  text-align: right;
}

.single-button-container {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.confirm-button {
  width: 570rpx;
  height: 88rpx;
  background-image: linear-gradient(-270deg, #DF515E 0%, #BB2830 100%);
  box-shadow: 0 2rpx 18rpx 0 rgba(187,40,48,0.20);
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  border-radius: 44rpx;
}

.confirm-container {
  background: #FFFFFF;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 150rpx;
}