  <view class='row-list' style='background-color:#fff;' wx:if="{{userInfo.IsReferral}}">
    <view class='list-item'>
      <view style='display:flex;flex-flow:column nowrap;min-width:550rpx;' bindtap='goToLearn'>
        <text class='list-item-title' style='font-size:16px;margin-bottom:10rpx;'>新手导读</text>
        <text style='font-size:12px;color:#515151;'>了解亚太奥莱，能省会赚</text>
      </view>
      <view style='padding-right:20rpx;'>
        <image src="http://img.qkmai.com/qkmbb/myytal/xsdd.png" style='width:100rpx;height:100rpx;;' lazy-load></image>
      </view>
    </view>
  </view>
  <view class='row-list' style='background-color:#fff;' wx:else>
    <view class='list-item'>
      <view style='display:flex;flex-flow:column nowrap;min-width:550rpx;' bindtap="bindstoreinfo">
        <text class='list-item-title' style='font-size:16px;margin-bottom:10rpx;'>个人信息</text>
        <text style='font-size:12px;color:#515151;'>完善我的分享信息</text>
      </view>
      <view style='padding-right:20rpx'>
        <image src="{{userInfo.picture ? userInfo.picture : 'http://img.qkmai.com/qkmbb/myytal/txzw.png'}}" style='width:100rpx;height:100rpx;;' lazy-load></image>
      </view>
    </view>
    <view class='list-item'>
      <view style='display:flex;flex-flow:column nowrap;min-width:550rpx;' bindtap="bindyongjin">
        <text class='list-item-title' style='font-size:16px;margin-bottom:10rpx;'>我的佣金</text>
        <view style='font-size:12px;color:#515151;'>可提现
          <text class='tip-text'>￥{{DistributionInfo.CanDrawSplittin}}</text> | 未结算
          <text class='tip-text'>￥{{DistributionInfo.NoSettlementSplttin}}</text>
        </view>
      </view>
      <view style='padding-right:20rpx'>
        <image src='http://img.qkmai.com/qkmbb/myytal/wdyj.png' style='width:100rpx;height:100rpx;' lazy-load></image>
      </view>
    </view>
    <view class='list-item'>
      <view style='display:flex;flex-flow:column nowrap;min-width:550rpx;' bindtap="bindxiaji">
        <text class='list-item-title' style='font-size:16px;margin-bottom:10rpx;'>我的团队</text>
        <view style='font-size:12px;color:#515151;'>
          <text class='tip-text'>{{DistributionInfo.teamPeopleCount?DistributionInfo.teamPeopleCount : 0}}人</text>
        </view>
      </view>
      <view style='padding-right:20rpx'>
        <image src='http://img.qkmai.com/qkmbb/myytal/wdtd.png' style='width:100rpx;height:100rpx;;' lazy-load></image>
      </view>
    </view>
  </view>

