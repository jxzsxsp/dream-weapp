page {
  background: #fafafa;
}

.head-container {
  width: 750rpx;
  height: 400rpx;
  justify-content: center;
  align-items: center;
  background: #FFFFFF;
}

.head-avatar {
  width: 136rpx;
  height: 136rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.head-avatar image {
  width: 100%;
  height: 100%;
}

.shop-name {
  margin-top: 32rpx;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  color: #000000;
  letter-spacing: 1.13rpx;
  text-align: center;
}

.favorite-btn {
  margin-top: 12rpx;
  width: 147rpx;
  height: 64rpx;
  justify-content: center;
  align-items: center;
  background: #0166fe;
  border-radius: 32rpx;
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.icon {
  margin-right: 14rpx;
}

.favorite-btn text {
  /* margin-left: 14rpx; */
}

.space {
  height: 20rpx;
  background: #fafafa;
  border-top: 1px solid #EFEFEF;
  border-bottom: 1px solid #EFEFEF;
}

.item-group {
  background: #FFFFFF;
}

.item {
  width: 750rpx;
  min-height: 100rpx;
}

.title {
  margin-top: 26rpx;
  width: 167rpx;
  height: 48rpx;
  margin-left: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #000000;
  letter-spacing: 1.13rpx;
}

.content {
  padding: 26rpx;
  width: 530rpx;
  flex-wrap: wrap;
  justify-content: flex-end;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #616161;
  letter-spacing: 1.13rpx;
}

.content text {
  text-align: right;
}

.item-line {
  margin-left: 30rpx;
  height: 1px;
  background: #EFEFEF;
}

.line {
  height: 1px;
  background: #EFEFEF;
}

.go-shop-btn {
  margin: auto;
  margin-top: 70rpx;
  width: 686rpx;
  height: 94rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #0156FE;
  letter-spacing: -0.17rpx;
  text-align: center;
}